# ML Options Trading System - Environment Variables
# Copy this file to .env and fill in your values

# Logging
LOG_LEVEL=INFO

# Data Configuration
LOOKBACK_YEARS=5
TICKERS=["SPY","QQQ","IWM"]

# MLflow
MLFLOW_TRACKING_URI=file:./mlruns

# Database (for future use)
# DATABASE_URL=postgresql://user:password@localhost:5432/options_trading

# Broker Configuration (for future use)
# BROKER_PAPER_MODE=true
# BROKER_PORT=7497  # 7497 for paper, 7496 for live
# IBKR_USERNAME=
# IBKR_PASSWORD=

# Risk Parameters
MAX_POSITION_SIZE=0.02
MAX_PORTFOLIO_EXPOSURE=0.20
MAX_POSITIONS=5

# Regime Thresholds
VIX_LOW_THRESHOLD=15.0
VIX_HIGH_THRESHOLD=25.0
VIX_RANK_LOW=0.30
VIX_RANK_HIGH=0.80

# FRED API (Free: https://fred.stlouisfed.org/docs/api/api_key.html)
FRED_API_KEY=your_fred_api_key_here
